---
import AnimatedBackground from "../components/AnimatedBackground.tsx";
---

<section
  class="relative h-screen w-screen flex items-center justify-center overflow-hidden bg-transparent"
>
  <!-- Animated Background with Blobs -->
  <AnimatedBackground client:load />


  <!-- Main Content - Centered -->
  <div class="relative z-10 max-w-4xl mx-auto px-8 text-center">
    <!-- Logo -->
    <div class="hero-logo mb-8">
      <img
        src="/assets/imagetype.png"
      alt="Unfriendzoned Blueprint Logo"
        class="w-48 h-auto md:w-64 lg:w-80 xl:w-96 mx-auto object-contain"
      />
    </div>

    <!-- Main Headline -->
    <h1
      class="hero-headline text-6xl md:text-7xl lg:text-8xl font-display font-bold mb-6 leading-tight flex flex-col items-center"
    >
      <span class="text-gradient whitespace-nowrap"
        >Escape the Friend Zone</span
      >
      <span class="block"
        >in <span class="text-gradient">7 Steps</span></span
      >
    </h1>

    <!-- Sub Headline -->
    <p
      class="hero-subheadline text-lg md:text-xl lg:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed font-lora"
    >
      Discover the Step-by-Step Guide That's Helped <strong
        class="text-primary-600 dark:text-yellow">1,000+ Good Guys</strong
      > Finally Get the Girl
    </p>

    <!-- CTA Button -->
    <div class="hero-cta mb-8">
      <a
        href="#purchase"
        class="btn-primary text-xl md:text-2xl px-12 py-6 shadow-2xl transform hover:scale-105 transition-all duration-300 inline-block"
      >
        üöÄ Get Instant Access
      </a>
    </div>

    <!-- Social Proof -->
    <div class="hero-social-proof flex items-center justify-center">
      <div class="flex -space-x-2 mr-4">
        <img
          class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800"
          src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=40&h=40&fit=crop&crop=face"
          alt="User 1"
        />
        <img
          class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800"
          src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=40&h=40&fit=crop&crop=face"
          alt="User 2"
        />
        <img
          class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800"
          src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face"
          alt="User 3"
        />
      </div>
      <div class="text-left">
        <div class="font-semibold text-gray-800 dark:text-white">
          1,000+ Success Stories
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          ‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê 4.9/5 Average Rating
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes logoEntrance {
    0% {
      transform: scale(0.5) rotate(0deg);
      opacity: 0;
    }
    60% {
      transform: scale(1.1) rotate(5deg);
      opacity: 1;
    }
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  @keyframes slideUp {
    0% {
      transform: translateY(50px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideUpSub {
    0% {
      transform: translateY(30px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    60% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    0% {
      transform: translateY(20px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02);
    }
  }

  .hero-logo img {
    animation: logoEntrance 1.2s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  .hero-headline span:nth-child(1) {
    animation: slideUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }

  .hero-headline span:nth-child(2) {
    animation: slideUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
  }

  .hero-subheadline {
    animation: slideUpSub 0.8s ease-out 0.6s forwards;
    opacity: 0;
  }

  .hero-cta a {
    animation: scaleIn 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.8s forwards;
    opacity: 0;
  }

  .hero-social-proof {
    animation: fadeInUp 0.6s ease-out 1.2s forwards;
    opacity: 0;
  }

  .hero-social-proof img:nth-child(1) {
    animation: scaleIn 0.5s ease-out 1.4s forwards;
    opacity: 0;
  }

  .hero-social-proof img:nth-child(2) {
    animation: scaleIn 0.5s ease-out 1.5s forwards;
    opacity: 0;
  }

  .hero-social-proof img:nth-child(3) {
    animation: scaleIn 0.5s ease-out 1.6s forwards;
    opacity: 0;
  }

  /* Continuous animations */
  .hero-logo img {
    animation:
      logoEntrance 1.2s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards,
      float 4s ease-in-out 2s infinite;
  }

  .hero-cta a {
    animation:
      scaleIn 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.8s forwards,
      pulse 2s ease-in-out 3s infinite;
  }
</style>
