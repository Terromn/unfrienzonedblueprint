---
const mediaLogos = [
  { name: "Men's Health", logo: "🏃‍♂️" },
  { name: "GQ", logo: "👔" },
  { name: "Cosmopolitan", logo: "💄" },
  { name: "Elite Daily", logo: "📰" },
  { name: "Buzzfeed", logo: "📺" },
  { name: "The Huffington Post", logo: "📊" }
];

const achievements = [
  {
    icon: "🏆",
    title: "#1 Dating Guide",
    subtitle: "On Amazon for 3 months straight"
  },
  {
    icon: "🎓",
    title: "Featured Expert",
    subtitle: "On 50+ podcasts & shows"
  },
  {
    icon: "💬",
    title: "10,000+ Reviews",
    subtitle: "With 4.9/5 star average"
  },
  {
    icon: "🌍",
    title: "Global Impact",
    subtitle: "Used in 67+ countries"
  }
];
---

<section class="section-padding bg-gray-50 dark:bg-slate-800">
  <div class="container-custom">
    <!-- Media Mentions -->
    <div class="text-center mb-16">
      <p class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-8">
        As Featured In
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
        {mediaLogos.map((media) => (
          <div class="flex items-center opacity-60 hover:opacity-100 transition-opacity duration-300">
            <span class="text-2xl mr-2">{media.logo}</span>
            <span class="font-semibold text-gray-700 dark:text-gray-300">{media.name}</span>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Achievements Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      {achievements.map((achievement) => (
        <div class="text-center">
          <div class="text-4xl mb-4">{achievement.icon}</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
            {achievement.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {achievement.subtitle}
          </p>
        </div>
      ))}
    </div>
    
    <!-- Trust Badges -->
    <div class="bg-white dark:bg-slate-900 rounded-2xl p-8 shadow-lg">
      <div class="text-center mb-8">
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Your Purchase is Protected
        </h3>
        <p class="text-gray-600 dark:text-gray-300">
          We stand behind our product with industry-leading guarantees
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <!-- 60-Day Guarantee -->
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
            60-Day Money-Back Guarantee
          </h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            If you're not completely satisfied, get your money back. No questions asked.
          </p>
        </div>
        
        <!-- Secure Payment -->
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
            Secure Payment
          </h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            SSL encrypted checkout with trusted payment processors.
          </p>
        </div>
        
        <!-- Instant Access -->
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-yellow-100 dark:bg-yellow-900/30 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
            Instant Digital Access
          </h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Get immediate access to the complete blueprint right after purchase.
          </p>
        </div>
      </div>
    </div>
    
    <!-- Live Counter -->
    <div class="text-center mt-12">
      <div class="inline-flex items-center bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400 px-6 py-3 rounded-full">
        <span class="w-2 h-2 bg-red-500 rounded-full mr-3 animate-pulse"></span>
        <span class="font-semibold">🔥 127 copies purchased in the last 24 hours</span>
      </div>
    </div>
  </div>
</section> 